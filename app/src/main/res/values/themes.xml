<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NunitoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="NunitoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="Theme.MyDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/unguJurna</item>
        <item name="colorPrimaryVariant">@color/merahmudaJurna</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/unguJurna</item>
        <item name="colorSecondaryVariant">@color/unguJurna</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textViewStyle">@style/NunitoTextViewStyle</item>
        <item name="buttonStyle">@style/NunitoButtonStyle</item>
    </style>
</resources>